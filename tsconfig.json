{
   "compilerOptions": {
      "skipLibCheck": true,
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "build/step1-tsc",
      "strict": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUncheckedIndexedAccess": true,
      "noUnusedLocals": true,
      "removeComments": true,
      "suppressImplicitAnyIndexErrors": true
   }
}
