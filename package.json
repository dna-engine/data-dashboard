{
   "name": "data-dashboard",
   "description": "A data-driven dashboard console for report widgets",
   "version": "0.0.3",
   "license": "MIT",
   "main": "server.js",
   "browser": "docs/index.html",
   "repository": "github:dnajs/data-dashboard",
   "homepage": "https://github.com/dnajs/data-dashboard",
   "bugs": "https://github.com/dnajs/data-dashboard/issues",
   "keywords": [
      "charts",
      "dashboard",
      "dnajs",
      "html5",
      "javascript",
      "report",
      "widgets"
   ],
   "jshintConfig": {
      "esversion": 9,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "browser": true,
      "jquery": true,
      "mocha": true,
      "node": true,
      "globals": {
         "dataDashboard": true,
         "dna": false,
         "fetchJson": false,
         "library": false
      }
   },
   "scripts": {
      "build": "gulp widgets && gulp build",
      "pretest": "jshint *.js src spec && npm run build",
      "test": "mocha spec",
      "build:prod": "rimraf build && gulp widgets && gulp build && gulp minify && gulp resourcify",
      "postbuild:prod": "rimraf docs && gulp docs && mocha spec",
      "dev": "npm test && gulp watch && webRoot=build/1-staging npm start"
   },
   "dependencies": {
      "chart.js": "~2.8",
      "dna.js": "~1.5",
      "fetch-json": "~2.2",
      "jquery": "~3.4",
      "moment": "~2.24",
      "node-fetch": "~2.6",
      "selectize": "~0.12",
      "simple-datatables": "~2.1",
      "web-ignition": "~1.1",
      "whatwg-fetch": "~3.0"
   },
   "devDependencies": {
      "@babel/core": "~7.6",
      "@babel/preset-env": "~7.6",
      "@fortawesome/fontawesome-free": "~5.11",
      "babel-minify": "~0.5",
      "canvas": "~2.6",
      "cssnano": "~4.1",
      "express": "~4.17",
      "gulp": "~4.0",
      "gulp-append-prepend": "~1.0",
      "gulp-babel": "~8.0",
      "gulp-concat": "~2.6",
      "gulp-file-include": "~2.1",
      "gulp-header": "~2.0",
      "gulp-htmlhint": "~2.2",
      "gulp-less": "~4.0",
      "gulp-order": "~1.2",
      "gulp-postcss": "~8.0",
      "gulp-replace": "~1.0",
      "gulp-rev-all": "~2.0",
      "gulp-size": "~3.0",
      "gulp-w3c-html-validator": "~1.4",
      "http": "~0.0",
      "jsdom": "~15.1",
      "jshint": "~2.10",
      "merge-stream": "~2.0",
      "mocha": "~6.2",
      "postcss": "~7.0",
      "postcss-font-magician": "~2.2",
      "postcss-preset-env": "~6.7",
      "server-listening": "~0.1"
   }
}
