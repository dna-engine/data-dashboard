{
   "name": "data-dashboard",
   "version": "0.2.5",
   "description": "A data-driven dashboard console for report widgets",
   "license": "MIT",
   "type": "module",
   "module": "server.js",
   "browser": "docs/index.html",
   "repository": "github:dna-engine/data-dashboard",
   "homepage": "https://data-dashboard.js.org",
   "bugs": "https://github.com/dna-engine/data-dashboard/issues",
   "keywords": [
      "charts",
      "dashboard",
      "data-dashboard",
      "dna-engine",
      "html5",
      "javascript",
      "report",
      "typescript",
      "widgets"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "mocha": true,
      "node": true
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "docs",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "runScriptsConfig": {
      "build": [
         "rimraf build dist docs **/.DS_Store",
         "jshint . --exclude-path .gitignore",
         "eslint --max-warnings 0 . --ext .ts",
         "tsc",
         "replacer src/web-app/widgets --ext=.html src/web-app/html/generated --concat=widgets.gen.html",
         "replacer src/web-app/root --ext=.html build/1-pre/web-app --pkg",
         "img-src-placeholder build/1-pre/web-app build/2-dev/web-app",
         "html-validator build/2-dev/web-app",
         "copy-folder src/web-app/assets/graphics --ext=.png build/2-dev/web-app/graphics",
         "gulp package-lib-css",
         "gulp package-lib-js-raw",
         "gulp package-lib-js-ootb",
         "replacer build/2-dev/web-app --ext=.js build/2-dev/web-app --concat=libraries.js",
         "gulp bundle-app-css",
         "rollup --config",
         "copy-folder build/2-dev/web-app --ext=.html build/3-min/web-app",
         "copy-folder build/2-dev/web-app/graphics --ext=.png build/3-min/web-app/graphics",
         "csso build/2-dev/web-app/libraries.css --output build/3-min/web-app/libraries.css",
         "csso build/2-dev/web-app/app.bundle.css --output build/3-min/web-app/app.bundle.css",
         "uglifyjs build/2-dev/web-app/app.bundle.js --output build/3-min/web-app/app.bundle.js",
         "copy-file build/2-dev/web-app/libraries.js --folder build/3-min/web-app",
         "rev-web-assets build/3-min/web-app build/4-rev/web-app --meta-content-base=https://data-dashboard.js.org",
         "add-dist-header build/4-rev/web-app dist/web-app",
         "copy-folder build/4-rev/web-app/graphics --ext=.png dist/web-app/graphics",
         "copy-folder dist/web-app docs",
         "copy-file src/properties/cname.txt docs/CNAME"
      ],
      "dev": [
         "tsc --watch",
         "gulp watch",
         "chokidar 'build/1-pre/web-app/**/*.js' --command 'rollup --config'",
         "browser-sync build/2-dev/web-app --watch"
      ]
   },
   "scripts": {
      "pretest": "run-scripts build",
      "test": "mocha spec/*.spec.js --timeout 5000",
      "dev": "npm test && run-scripts dev --parallel",
      "prod": "NODE_ENV=production npm start"
   },
   "cdnVersion": {
      "fontAwesome": "6.2"
   },
   "dependencies": {
      "chart.js": "~3.9",
      "dna-engine": "~2.2",
      "fetch-json": "~2.7",
      "jquery": "~3.6",
      "node-fetch": "~3.2",
      "open": "~8.4",
      "pretty-print-json": "~1.3",
      "simple-datatables": "~3.2",
      "web-ignition": "~1.5",
      "whatwg-fetch": "~3.6"
   },
   "devDependencies": {
      "@babel/core": "~7.19",
      "@babel/preset-env": "~7.19",
      "@fortawesome/fontawesome-free": "~6.2",
      "@rollup/plugin-babel": "~6.0",
      "@types/jquery": "~3.5",
      "@types/node": "~18.11",
      "@typescript-eslint/eslint-plugin": "~5.40",
      "@typescript-eslint/parser": "~5.40",
      "add-dist-header": "~0.3",
      "assert-deep-strict-equal": "~1.0",
      "babel-minify": "~0.5",
      "babel-preset-minify": "~0.5",
      "browser-sync": "~2.27",
      "chokidar-cli": "~3.0",
      "copy-file-util": "~0.1",
      "copy-folder-util": "~0.2",
      "cssnano": "~5.1",
      "csso-cli": "~4.0",
      "eslint": "~8.26",
      "gulp": "~4.0",
      "gulp-append-prepend": "~1.0",
      "gulp-babel": "~8.0",
      "gulp-concat": "~2.6",
      "gulp-file-include": "~2.3",
      "gulp-header": "~2.0",
      "gulp-less": "~5.0",
      "gulp-order": "~1.2",
      "gulp-postcss": "~9.0",
      "gulp-replace": "~1.1",
      "gulp-size": "~4.0",
      "gulp-touch-cmd": "~0.0",
      "img-src-placeholder": "~0.1",
      "jshint": "~2.13",
      "merge-stream": "~2.0",
      "mocha": "~10.1",
      "postcss": "~8.4",
      "postcss-font-magician": "~3.0",
      "postcss-preset-env": "~7.8",
      "puppeteer": "~19.1",
      "puppeteer-browser-ready": "~0.5",
      "replacer-util": "~0.2",
      "rev-web-assets": "~0.1",
      "rollup": "~3.2",
      "run-scripts-util": "~0.1",
      "typescript": "~4.8",
      "uglify-js": "~3.17",
      "w3c-html-validator": "~1.2"
   }
}
