{
   "name": "data-dashboard",
   "description": "A data-driven dashboard console for report widgets",
   "version": "0.0.1",
   "license": "MIT",
   "main": "web-target/dist/index.html",
   "repository": "github:dnajs/data-dashboard",
   "homepage": "https://github.com/dnajs/data-dashboard",
   "bugs": "https://github.com/dnajs/data-dashboard/issues",
   "keywords": [
      "charts",
      "dashboard",
      "dnajs",
      "html5",
      "javascript",
      "report",
      "widgets"
   ],
   "jshintConfig": {
      "esversion": 9,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "browser": true,
      "jquery": true,
      "mocha": true,
      "node": true,
      "globals": {
         "dataDashboard": true,
         "dna": false,
         "fetchJson": false,
         "library": false
      }
   },
   "scripts": {
      "prepare": "cd node_modules/simple-datatables && npm install rollup-plugin-commonjs rollup-plugin-node-globals rollup-plugin-node-builtins rollup-plugin-node-resolve rollup-plugin-buble rollup-plugin-terser rollup && node_modules/rollup/bin/rollup src/index.js --config --format umd --output.name simpleDataTables --output.file dist/simple-datatables.min.js",
      "web-server": "http-server -p 6868 &",
      "lint": "jshint gulpfile.js src spec",
      "build": "gulp clean && gulp widgets && gulp build && gulp minify && gulp resourcify",
      "pretest": "npm run lint && npm run build",
      "test": "mocha spec",
      "docs": "rimraf docs && gulp docs",
      "staging-only": "npm run lint && gulp clean && gulp widgets && gulp build"
   },
   "dependencies": {
      "chart.js": "~2.8",
      "dna.js": "~1.5",
      "fetch-json": "~2.2",
      "jquery": "~3.3",
      "moment": "~2.24",
      "node-fetch": "~2.3",
      "selectize": "~0.12",
      "simple-datatables": "~1.7",
      "web-ignition": "~1.1",
      "whatwg-fetch": "~3.0"
   },
   "devDependencies": {
      "@babel/core": "~7.4",
      "@babel/preset-env": "~7.4",
      "@fortawesome/fontawesome-free": "~5.8",
      "babel-minify": "~0.5",
      "canvas": "~2.4",
      "cssnano": "~4.1",
      "del": "~4.1",
      "express": "~4.16",
      "gulp": "~4.0",
      "gulp-append-prepend": "~1.0",
      "gulp-babel": "~8.0",
      "gulp-concat": "~2.6",
      "gulp-file-include": "~2.0",
      "gulp-header": "~2.0",
      "gulp-htmlhint": "~2.2",
      "gulp-less": "~4.0",
      "gulp-postcss": "~8.0",
      "gulp-replace": "~1.0",
      "gulp-rev-all": "~1.0",
      "gulp-size": "~3.0",
      "gulp-sort": "~2.0",
      "gulp-w3c-html-validator": "~1.4",
      "http": "~0.0",
      "http-server": "~0.11",
      "jsdom": "~14.0",
      "jshint": "~2.10",
      "merge-stream": "~1.0",
      "mocha": "~6.0",
      "postcss": "~7.0",
      "postcss-font-magician": "~2.2",
      "postcss-preset-env": "~6.6"
   }
}
